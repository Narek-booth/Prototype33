<div class="row mb-4">
  <div class="col-md-6 offset-md-3">

<h1>
  <%= @user.username %>
</h1>

<h3>
  Causes
</h3>


<% @user.causes.each do |cause| %>
<div class="row mb-4">
  <div class="card" >
    <img src="<%= cause.image %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"> <%=cause.theme %> </h5>
      <p class="card-text"> <%=cause.description %> </p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
</div>
<% end %>


<h3>
  Commitments
</h3>

<% @user.commitments.each do |commitment| %>
<div class="row mb-4">
  <div class="card" >
    <div class="card-body">
      <h5 class="card-title"> <%=commitment.target %> </h5>
      <p class="card-text"> <%=commitment.description %> </p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
</div>
<% end %>

  </div>
</div>