<h1>Commitments</h1>

<table>
  <thead>
    <tr>
      <th>Target</th>
      <th>Description</th>
      <th>Donation size</th>
      <th>Status</th>
      <th>Causes</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commitments.each do |commitment| %>
      <tr>
        <td><%= commitment.target %></td>
        <td><%= commitment.description %></td>
        <td><%= commitment.donation_size %></td>
        <td><%= commitment.status %></td>
        <td><%= commitment.cause.theme %></td>
        <td><%= commitment.owner.username %></td>
        <td><%= link_to 'Show', commitment %></td>
        <td><%= link_to 'Edit', edit_commitment_path(commitment) %></td>
        <td><%= link_to 'Destroy', commitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Commitment', new_commitment_path %>
